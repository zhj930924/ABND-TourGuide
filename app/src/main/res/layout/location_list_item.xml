<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_bg"
    android:foregroundGravity="center"
    android:orientation="horizontal"
    android:weightSum="5">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/location_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:background="@drawable/image_view_bg"
        android:scaleType="centerCrop"
        tools:src="@drawable/food_0"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:text="@string/restaurant_0_name"/>

        <ImageView
            android:id="@+id/location_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="12dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_heart_4"/>

        <TextView
            android:id="@+id/location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:text="@string/restaurant_0_address"/>

    </LinearLayout>

</LinearLayout>

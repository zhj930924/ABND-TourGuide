<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.exploreshanghai">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ExploreActivity"
            android:label="@string/explore"
            android:parentActivityName=".MainActivity"
            tools:targetApi="jelly_bean">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".FavoriteActivity"
            android:label="@string/favorite"
            android:parentActivityName=".MainActivity"
            tools:targetApi="jelly_bean">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <!-- Attractions -->
        <activity
            android:name=".AttractionActivity"
            android:label="@string/attractions"
            android:parentActivityName=".ExploreActivity"
            tools:targetApi="jelly_bean">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ExploreActivity"/>
        </activity>
        <activity
            android:name=".BundActivity"
            android:label="@string/bund_title"
            android:parentActivityName=".AttractionActivity"
            tools:targetApi="jelly_bean">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AttractionActivity"/>
        </activity>
        <activity
            android:name=".MuseumActivity"
            android:label="@string/museum_title"
            android:parentActivityName=".AttractionActivity"
            tools:targetApi="jelly_bean">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AttractionActivity"/>
        </activity>
        <activity
            android:name=".ZooActivity"
            android:label="@string/zoo_title"
            android:parentActivityName=".AttractionActivity"
            tools:targetApi="jelly_bean">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AttractionActivity"/>
        </activity>
        <activity
            android:name=".YuGardenActivity"
            android:label="@string/yu_garden_title"
            android:parentActivityName=".AttractionActivity"
            tools:targetApi="jelly_bean">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AttractionActivity"/>
        </activity>
        <activity
            android:name=".TrainActivity"
            android:label="@string/train_title"
            android:parentActivityName=".AttractionActivity"
            tools:targetApi="jelly_bean">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AttractionActivity"/>
        </activity>
    </application>

</manifest>